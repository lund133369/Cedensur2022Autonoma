<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/fondo"
    tools:context=".Servicios">

    <GridLayout
        android:id="@+id/gridServicios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:columnCount="2">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardTerapiaInfantil"
            android:layout_width="160dp"
            android:layout_height="180dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="20dp"
            android:backgroundTint="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtInfantil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Terapia para niÃ±os"
                    android:gravity="center_horizontal"
                    style="@style/texto2"/>

                <ImageView
                    style="@style/imagen2"
                    android:src="@drawable/terapia_infantil"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardTerapiaConductual"
            android:layout_width="160dp"
            android:layout_height="180dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="20dp"
            android:backgroundTint="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtConductual"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Terapia Dialectico Conductual"
                    android:gravity="center_horizontal"
                    style="@style/texto2"/>


                <ImageView
                    style="@style/imagen2"
                    android:src="@drawable/terapia_conductual"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardTerapiaParejas"
            android:layout_width="160dp"
            android:layout_height="180dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="20dp"
            android:backgroundTint="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtParejas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Terapia de parejas"
                    android:gravity="center_horizontal"
                    style="@style/texto2"/>

                <ImageView
                    style="@style/imagen2"
                    android:src="@drawable/terapia_parejas"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardOrientacion"
            android:layout_width="160dp"
            android:layout_height="180dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="20dp"
            android:backgroundTint="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtOrientacion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Orientacion vocacional"
                    android:gravity="center_horizontal"
                    style="@style/texto2"/>

                <ImageView
                    style="@style/imagen2"
                    android:src="@drawable/orientacion"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </GridLayout>
</FrameLayout>